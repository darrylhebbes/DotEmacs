# name: New Simple Class
# key: new-simple-class
# expand-env: ((yas-indent-line 'fixed))
# --
--[[------------------------------------------------------------------

$0

--]]------------------------------------------------------------------

local $1 = {}
$1.__index = $1

function $1.new()
    local self = setmetatable({}, $1)
    return self
end

$1.__metatable = $1

return $1
